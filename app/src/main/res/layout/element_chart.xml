<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable name="rival" type="com.example.matrice.ChartElement" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgElem"
            android:layout_width="95dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="#EF9A9A"
            android:contentDescription="User Image"
            android:padding="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@{rival.img}" />


        <TextView
            android:id="@+id/txtUsernameElem"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="#90CAF9"
            android:padding="5dp"
            android:text="@{rival.username}"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/imgElem"
            app:layout_constraintStart_toEndOf="@+id/imgElem"
            app:layout_constraintTop_toTopOf="@+id/imgElem" />

        <TextView
            android:id="@+id/txtXpElem"
            android:layout_width="85dp"
            android:layout_height="25dp"
            android:layout_margin="5dp"
            android:background="#9FA8DA"
            android:padding="5dp"
            android:text="@{rival.xp}"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/txtHpElem"
            app:layout_constraintStart_toEndOf="@id/txtUsernameElem"
            app:layout_constraintTop_toTopOf="@id/txtUsernameElem" />

        <TextView
            android:id="@+id/txtHpElem"
            android:layout_width="85dp"
            android:layout_height="25dp"
            android:layout_margin="5dp"
            android:background="#B39DDB"
            android:padding="5dp"
            android:text="@{rival.hp}"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/txtUsernameElem"
            app:layout_constraintStart_toEndOf="@id/txtUsernameElem"
            app:layout_constraintTop_toBottomOf="@+id/txtXpElem" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>